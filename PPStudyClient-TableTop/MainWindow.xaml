<Window x:Class="PPStudyClient_TableTop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Closed="Window_Closed" Background="#FF974B4B">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="header_label" Content="TableTop" HorizontalAlignment="Center" VerticalAlignment="Top" Height="59" Width="168" FontWeight="Bold" FontSize="36" BorderBrush="Black" Grid.Row="0" Grid.Column="1" Margin="18,0,17,0"/>
        <Image Name="image" Grid.Column="1" HorizontalAlignment="Center" Height="150"  Grid.Row="1" VerticalAlignment="Top" Width="150"/>

    </Grid>
</Window>
